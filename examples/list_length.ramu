-- List length example

-- Get the length of a list
length : list B -> list 1
length(xs) = match xs with
  | nil => nil
  | cons(h, t) => cons(*, length(t))

-- Create a list with 3 elements
makeList : () -> list B
makeList() = cons(true, cons(false, cons(true, nil)))

-- Main function: computes length of [true, false, true]
-- Result should be [*, *, *]
main : () -> list 1
main() = length(makeList())
